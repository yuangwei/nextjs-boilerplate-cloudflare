{
	"name": "nextjs-cloudflare-worker-boilerplate",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=development next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"auth:generate": "NODE_ENV=development npx @better-auth/cli generate --output=./src/db/schema/auth.ts",
		"auth:migrate": "NODE_ENV=development npx @better-auth/cli migrate",
		"format": "biome format --write ./src/**/*.{ts,tsx}",
		"type-check": "tsc --noEmit",
		"validate": "npm run type-check && npm run lint && npm run format:check && npm run build",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"prepare": "husky install"
	},
	"dependencies": {
		"@better-auth/stripe": "^1.3.29",
		"@libsql/client": "^0.15.15",
		"@opennextjs/cloudflare": "^1.6.5",
		"@radix-ui/react-slot": "^1.2.3",
		"better-auth": "^1.3.29",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.6",
		"lucide-react": "^0.546.0",
		"next": "15.4.6",
		"pg": "^8.16.3",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"stripe": "^19.1.0",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.7",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@commitlint/types": "^19.8.1",
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^20.19.11",
		"@types/pg": "^8.15.5",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.31.5",
		"husky": "^9.1.7",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5",
		"wrangler": "^4.32.0"
	},
	"lint-staged": {
		"./src/*.{js,jsx,ts,tsx,json,mdx}": [
			"prettier --write"
		]
	}
}
